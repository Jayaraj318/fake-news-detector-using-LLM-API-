{
  "manifest_version": 3,
  "name": "Fake News Detection using Gemini AI",
  "description": "Detects fake news using Gemini AI via FastAPI backend. Use popup or right-click context menu.",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}